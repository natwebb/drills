doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Exponential Growth
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Grow It!
    .row
      .small-2.columns
        input#base(type='text', placeholder='Base #')
      .small-2.columns
        input#interval(type='text', placeholder='Time Interval')
      .small-3.columns
        button.radius.small#growIt Grow It!
      .small-2.columns
        button.radius.small.alert#stop Stop!
      .small-2.columns
        button.radius.small#reset Reset
    .row
      .small-12.columns
        ul.no-bullet#container

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/source/main.js')
    script $(document).foundation();

